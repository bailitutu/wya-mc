{
  "name": "wya-mc",
  "version": "0.0.1",
  "description": "微一案微信小程序UI组件库",
  "main": "lib",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run prompt && npm run all",
    "build": "cross-env NODE_ENV=production gulp -f ./config/gulpfile.js build --color",
    "serve": "cross-env NODE_ENV=development gulp -f ./config/gulpfile.js dev --color",
    "lint": "esw ./src/ ./config/ ./example/",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --fix --watch",
    "mock": "cd ./mock && npm run start",
    "all": "npm-run-all --parallel --race --continue-on-error lint:watch serve",
    "prompt": "node ./config/prompt.config.js",
    "test": "",
    "test:watch": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wya-team/wya-mc.git"
  },
  "keywords": [
    "weixin",
    "wya-mc",
    "component",
    "weiyian"
  ],
  "author": "deot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wya-team/wya-mc/issues"
  },
  "homepage": "https://github.com/wya-team/wya-mc#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-function-bind": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-watch": "^6.0.1",
    "fs-extra": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "husky": "^4.2.3",
    "inquirer": "^7.1.0",
    "lint-staged": "^10.0.7",
    "miniprogram-simulate": "^1.2.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./config/commit-lint"
    }
  },
  "lint-staged": {
    "{src,config,example}/**/*.{js,jsx}": [
      "esw --fix",
      "git add"
    ]
  }
}
