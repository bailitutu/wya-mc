page {
    background-color: #f4f4f4;
}
/* 
 * flex 
 */
.g-flex {
    display: flex;
}
.g-flex-ac {
    display: flex;
    align-items: center;
}
.g-flex-cc {
    display: flex;
    align-items: center;
    justify-content: center;
}
.g-fd-c {
    flex-direction: column;
}
.g-jc-sa {
    justify-content: space-around;
}

/**
 * color
 */
.g-black {
    color: #000 !important;
}

/**
 * font-size
 */
.g-fs-24 {
    font-size: 24rpx;
}

/**
 * padding
 */
.g-pd-20 {
    padding: 20rpx;
}
.g-pd-lr-20 {
    padding-left: 20rpx;
    padding-right: 20rpx;
}

/**
 * margin
 */
.g-m-r-10 {
    margin-right: 10rpx;
}

/**
 * btn按钮
 */
.g-btn {
    background-color: #fff;
    border: 1px solid #d4d4d4;
    width: 80vw;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 20rpx;
}

/**
 * notes小部件
 */
.g-notes {
    font-size: 24rpx;
    color: #999999;
    line-height: 36rpx;
    padding: 0 20rpx;
}