<view
    class="pop pop-{{ type }} {{ show ? 'pop-show' : '' }}"
    animation="{{show ? showAnimation : hideAnimation}}"
>
    <view 
        wx:if="{{ mask }}"
        class="_mask {{ showMask ? '' : '_mask-hide' }}"
        bind:tap="handleClickMask" 
    />
    <view class="_container">
        <slot></slot>
    </view>
</view>