/* 大按钮 */
.g-big-btn-red {
	margin:0 auto;
	width: 90%;
	height: 88rpx;
	line-height: 84rpx;
	border-radius: 44rpx;
	font-size: 32rpx;
	font-weight: 300;
	background-color: #d3171a;
	color: #ffffff;
	text-align: center;
	box-sizing: border-box;
	&:active {
		background-color: #c61316;
	}
}

.g-big-btn-line {
	margin:0 auto;
	width: 90%;
	height: 88rpx;
	line-height: 84rpx;
	border-radius: 44rpx;
	font-size: 32rpx;
