.search-bar {
    width: 100%;
    display: flex;
    align-items: center;
    background-color: #efeff4;
    padding: 15rpx;
    box-sizing: border-box;
}

.search-bar ._label {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #999999;
    font-weight: 300;
    background-color: #ffffff;
    border-radius: 10rpx;
}
.search-bar ._box {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: 300;
    background-color: #ffffff;
    border-radius: 10rpx;
    padding: 0 10rpx;
    .__input {
        flex: 1;
        margin: 0 10rpx;
        color: #333333;
    }
}

.search-bar ._cancel {
    font-size: 30rpx;
    color: #099dec;
    white-space: nowrap;
    margin-left: 15rpx;
}