<view class="steps steps--{{ type == 'vertical' ? 'vsteps' : 'steps' }} steps--{{ steps.length }} {{ className }}">
  <view
    wx:for="{{ steps }}" wx:for-item="step" wx:key="unique" wx:for-index="index"
    class="steps__step {{ hasDesc ? 'steps__step--db-title' : '' }} {{ index == 0 ? 'steps__step--first-child' : '' }} {{ index == steps.length - 1 ? 'steps__step--last-child' : '' }} {{ step.done ? 'steps__step--done' : '' }} {{ step.current ? 'steps__step--cur' : '' }}"
  >
    <view class="steps__title" style="{{step.done ? 'color:' + color: ''}}">{{ step.text }}</view>
    <view 
      wx:if="{{ hasDesc && step.desc }}" 
      class="steps__title steps__title--desc"
      style="{{step.done ? 'color:' + color: ''}}"
    >{{ step.desc }}</view>
    <view class="steps__icons">
      <block wx:if="{{step.current}}">
        <icon type="{{currentIcon}}" styles="{{activeItem+';color:'+color}}" />
      </block>
      <block wx:else>
         <view 
          class="steps__circle" 
          style="{{step.done ? 'background-color:' + color: ''}}"
        ></view>
      </block>
    </view>
    <view class="steps__line"></view>
  </view>
</view>