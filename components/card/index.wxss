.card {
    display: flex;
    margin-left: 0;
    padding: 10rpx 20rpx;
    overflow: hidden;
    position: relative;
    font-size: 28rpx;
    .__thumb {
        width: 180rpx;
        height: 180rpx;
        position: relative;
        margin-left: auto;
        margin-right: auto;
        overflow: hidden;
        background-size: cover;
    }
    .__img {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 100%;
    }
    .__detail {
        flex:1;
        margin-left:20rpx;
        position:relative;
    }
    ._detail-row {
        overflow:hidden;
        line-height:40rpx;
        min-height:40rpx;
        margin-bottom:6rpx;
    }
    .__right-col {
        float:right;
        line-height: 1.5;
    }
    .__left-col {
        margin-right:160rpx;
        line-height: 1.5;
    }

}