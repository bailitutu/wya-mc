.card {
    background: #fff;
    display: flex;
    margin-left: 0;
    padding: 5px 15px;
    overflow: hidden;
    position: relative;
    font-size: 14px;
    .__thumb {
        width: 90px;
        height: 90px;
        position: relative;
        margin-left: auto;
        margin-right: auto;
        overflow: hidden;
        background-size: cover;
    }
    .__img {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 100%;
    }
    .__detail {
        flex:1;
        margin-left:10px;
        position:relative;
    }
    ._detail-row {
        overflow:hidden;
        line-height:20px;
        min-height:20px;
        margin-bottom:3px;
    }
    .__right-col {
        float:right;
        line-height: 1.5;
    }
    .__left-col {
        margin-right:80px;
        line-height: 1.5;
    }

}